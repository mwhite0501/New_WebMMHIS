            {
                if(isPause == false)
                {
                    isReverse = false;
                    isPlay = true;
                    time.Enabled = true;
                    idx = idx + 1 >= Images.Count() ? 0 : idx + 1;
                }
                else
                {
                    OnSubmitStop();
                }
            }
        }

        void OnSubmitReverse()
        {
            if (Images.Any())
            {
                if(isPause == false)
                {
                    isPlay = false;
                    isReverse = true;
                    //isPause = !isPause;
                    time.Enabled = true;
                    idx = idx - 1 < 0 ? Images.Count() - 1 : idx - 1;
                }
                else
                {
                    OnSubmitStop();
                }

            }
        }

